<?xml version="1.0"?>
<root>
  <!-- Configuration for Up/Down (inc. j/k) -->
  <include path="vim_emu_move_up_down.xml"></include>

  <!-- h/l -->
  <autogen>
    __KeyToKey__ KeyCode::H, ModifierFlag::NONE,
    KeyCode::CURSOR_LEFT, {{USE_SHIFT}}ModifierFlag::NONE, {{AFTER}}
  </autogen>
  <autogen>
    __KeyToKey__ KeyCode::L, ModifierFlag::NONE, KeyCode::CURSOR_RIGHT,
    {{USE_SHIFT}}ModifierFlag::NONE, {{AFTER}}
  </autogen>
  <!-- 0/$ -->
  <autogen>
    __KeyToKey__ KeyCode::KEY_0, ModifierFlag::NONE,
    KeyCode::CURSOR_LEFT, {{USE_SHIFT}}ModifierFlag::COMMAND_L, {{AFTER}}
  </autogen>
  <autogen>
    __KeyToKey__ KeyCode::KEY_4,
    MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT|ModifierFlag::NONE,
    KeyCode::CURSOR_RIGHT, {{USE_SHIFT}}ModifierFlag::COMMAND_L, {{AFTER}}
  </autogen>
  <!-- a/e same as 0/$ (don't disable) -->
  <autogen>
    __KeyToKey__ KeyCode::A,
    MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_CONTROL|ModifierFlag::NONE,
    KeyCode::A, {{USE_SHIFT}}ModifierFlag::COMMAND_L, {{AFTER}}
  </autogen>
  <autogen>
    __KeyToKey__ KeyCode::E,
    MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_CONTROL|ModifierFlag::NONE,
    KeyCode::E, {{USE_SHIFT}}ModifierFlag::COMMAND_L, {{AFTER}}
  </autogen>

  <!-- w/W/e/E/b/B -->
  <autogen>
    __KeyToKey__ KeyCode::W, ModifierFlag::NONE,
    KeyCode::CURSOR_RIGHT, {{USE_SHIFT}}ModifierFlag::OPTION_L,
    KeyCode::CURSOR_RIGHT, {{USE_SHIFT}}ModifierFlag::OPTION_L,
    KeyCode::CURSOR_LEFT, {{USE_SHIFT}}ModifierFlag::OPTION_L,
    {{AFTER}}
  </autogen>
  <autogen>
    __KeyToKey__ KeyCode::W,
    MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT|ModifierFlag::NONE,
    KeyCode::CURSOR_RIGHT, {{USE_SHIFT}}ModifierFlag::OPTION_L,
    KeyCode::CURSOR_RIGHT, {{USE_SHIFT}}ModifierFlag::OPTION_L,
    KeyCode::CURSOR_LEFT, {{USE_SHIFT}}ModifierFlag::OPTION_L,
    {{AFTER}}
  </autogen>
  <autogen>
    __KeyToKey__ KeyCode::E, ModifierFlag::NONE,
    KeyCode::CURSOR_RIGHT, {{USE_SHIFT}}ModifierFlag::OPTION_L, {{AFTER}}
  </autogen>
  <autogen>
    __KeyToKey__ KeyCode::E,
    MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT|ModifierFlag::NONE,
    KeyCode::CURSOR_RIGHT, {{USE_SHIFT}}ModifierFlag::OPTION_L, {{AFTER}}
  </autogen>
  <autogen>
    __KeyToKey__ KeyCode::B, ModifierFlag::NONE,
    KeyCode::CURSOR_LEFT, {{USE_SHIFT}}ModifierFlag::OPTION_L, {{AFTER}}
  </autogen>
  <autogen>
    __KeyToKey__ KeyCode::B,
    MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT|ModifierFlag::NONE,
    KeyCode::CURSOR_LEFT, {{USE_SHIFT}}ModifierFlag::OPTION_L, {{AFTER}}
  </autogen>
</root>
